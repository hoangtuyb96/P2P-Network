<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">

    <div class="form-box">
      <div class="form-top">
        <div class="form-top-left">
          <%= raw t("static_pages.home.signup_title") %>
          <%= raw t("static_pages.home.signup_tut") %>
        </div>
        <div class="form-top-right">
          <i class="fa fa-pencil"></i>
        </div>
      </div>
      <div class="form-bottom">
        <%= form_for @user, url: sign_up_path do |f| %>
          <%= render "shared/error_messages" %>
          <div class="form-group">
            <%= f.label :email, class: "sr-only"%>
            <%= f.text_field :email, placeholder: "Email...", class: "form-email form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :password, class: "sr-only" %>
            <%= f.password_field :password, placeholder: "Password...", class: "form-password form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, class: "sr-only" %>
            <%= f.password_field :password_confirmation, placeholder: "Password confirmation...", class: "form-password form-control" %>
          </div>
          
          <div class="form-group">
            <%= f.label :fullname, class: "sr-only" %>
            <%= f.text_field :fullname, placeholder: "Fullname...", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :address, class: "sr-only" %>
            <%= f.text_area :address, placeholder: "Address...", :cols => 42, :rows => 10 %>
          </div>

          <div class="actions btn">
            <%= f.submit "Sign up" %>
          </div>
        <% end %>
      </div>
    </div>

  </div>
</div>

<header class = "navbar navbar-fixed-top navbar-inverse">
  <div class = "container">
    <%= link_to t("app_name"), root_path , id: "logo" %>
    <nav>
      <ul class = "nav navbar-nav navbar-right">
        <% if user_signed_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= current_user.fullname %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t("profile"), "#" %></li>
                <li><%= link_to t("settings"), "#" %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to t("logout_button"), logout_path, method: :delete %>
                </li>
              </ul>
            </li>
        <% else %>
            <li><%= link_to t("login_button"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>

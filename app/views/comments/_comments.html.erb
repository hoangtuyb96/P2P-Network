<% if @status_tmp.present? %>
  <% @object = @status_tmp %> 
<% else %>
  <% @object = @commentable %>
  <% unless @object.present? %>
    <% if @status.present? %>
      <% @object = @status %>
    <% else %>
      <% @object = @image %>
    <% end %>
  <% end %>
<% end %>
<% @object.comments.each do |comment| %>
  <div class="row">
    <div class="comments-container">
      <ul id="comments-list" class="comments-list">
        <li>
          <div class="comment-main-level">
            <div class="comment-avatar"><%= cl_image_tag(comment.user.avatar) %></div>
            <div class="comment-box">
              <div class="comment-head">
                <h6 class="comment-name"><%= comment.user.fullname %></h6>
                <span>created at <%= comment.created_at %></span>
                <i class="fa fa-reply"></i>
                <%= link_to comment, method: :delete, remote: true do %>
                  <i class="fa fa-times" aria-hidden="true"></i>
                <% end %>
              </div>
              <div class="comment-content">
                <%= comment.content %>
              </div>
            </div>
          </div>
        </li>
      </ul>
    </div>
  </div>
<% end %>

<%= provide :title, "Edit user" %>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div class="box">
        <div class="avatar-index">
          <%=cl_image_tag(current_user.avatar) %>
          <b><%= link_to current_user do %><%= current_user.fullname %><% end %></b>
        </div>
        <br>
        <div align="left">
          <%= link_to user_following_path(current_user) do %><i style="color:black" class="fa fa-address-book" aria-hidden="true"> Following</i><% end %>
        </div>
        <div align="left">
          <%= link_to user_follower_path(current_user) do %><i style="color:black" class="fa fa-address-book" aria-hidden="true"> Follower</i><% end %>
        </div>
        <div align="left">
          <%= link_to groups_path do %><i style="color:black" class="fa fa-users" aria-hidden="true"> Groups</i><% end %>
        </div>
        <% @groups.each do |group| %>
          <div class="group-show" align="left">
            <%= link_to group do %><i style="color:gray" class="fa fa-users" aria-hidden="true"><%= group.name %></i><% end %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-md-9">
      <div class="row">
        <div class="col-xs-12" >
          <div class="panel panel-info">
            <div class="panel-heading">
              <h3 class="panel-title"><%= current_user.fullname %></h3>
            </div>
            <div class="panel-body">
              <div class="row">
                <%= form_for @user do |f| %>
                <div class="col-md-3 col-lg-3 " align="center">
                  <%= cl_image_tag(@user.avatar, alt: "user_image") %>
                  <%= f.file_field :avatar %>
                </div>
                <div class=" col-md-9 col-lg-9 ">
                  <table class="table table-user-information">
                    <tbody>
                      <tr>
                        <div class="form-group">
                          <%= f.text_field :email, placeholder: "Email...", class: "form-control", disabled: true %>
                        </div>
                      </tr>
                      <tr>
                        <div class="form-group">
                          <%= f.text_field :fullname, placeholder: "Fullname...", class: "form-control" %>
                        </div>
                      </tr>
                      <tr>
                        <div class="form-group">
                          <td><%= f.label :sex %></td>
                          <td>
                            <%= f.label :sex, "Male", :value => "Male"  %>
                            <%= f.radio_button :sex, "Male", checked: true  %>
                            <%= f.label :sex, "Female", :value => "Female" %>
                            <%= f.radio_button :sex, "Female" %>
                          </td>
                        </div>
                      </tr>
                      <tr>
                        <div class="form-group">
                          <%= f.text_area :address, placeholder: "Address...", class: "form-control"%>
                        </div>
                      </tr>
                      <tr>
                        <div class="form-group">
                          <%= f.text_field :job, placeholder: "Job...", class: "form-control" %>
                        </div>
                      </tr>
                      <tr>
                        <div class="form-group">
                          <%= f.date_field :birthday, placeholder: "Email...", class: "form-control" %>
                        </div>
                      </tr>
                    </tbody>
                  </table>
                  <div class="panel-footer">
                    <% if @user == current_user %>
                    <%= f.submit %>
                    <div class="btn btn-danger">
                      <%= link_to "Delete", @user, method: :delete %>
                    </div>
                    <% end %>
                  </div>
                </div>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

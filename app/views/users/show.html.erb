<%= provide :title, t("profile") %>
<div class="row">
  <div class="col-xs-12 col-sm-12 col-md-8 col-lg-6 col-md-offset-3 col-lg-offset-3 toppad" >
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title"><%= current_user.fullname %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <%= form_for @user do |f| %>
          <div class="col-md-3 col-lg-3 " align="center">
            <%= cl_image_tag(@user.avatar, alt: "user_image") %>
            <%= f.file_field :avatar %>
          </div>
          <div class=" col-md-9 col-lg-9 "> 
            <table class="table table-user-information">
              <tbody>
                <tr>
                  <div class="form-group">
                    <%= f.text_field :email, placeholder: "Email...", class: "form-control", disabled: true %>
                  </div>
                </tr>
                <tr>
                  <div class="form-group">
                    <%= f.text_field :fullname, placeholder: "Fullname...", class: "form-control" %>
                  </div>
                </tr>
                <tr>
                  <div class="form-group">
                    <td><%= f.label :sex %></td>
                    <td>
                      <%= f.label :sex, "Male", :value => "Male"  %>
                      <%= f.radio_button :sex, "Male", checked: true  %>
                      <%= f.label :sex, "Female", :value => "Female" %>
                      <%= f.radio_button :sex, "Female" %>
                      </td>
                    </div>
                  </tr>
                  <tr>
                    <div class="form-group">
                      <%= f.text_area :address, placeholder: "Address...", class: "form-control"%>
                    </div>
                  </tr>
                  <tr>
                    <div class="form-group">
                      <%= f.text_field :job, placeholder: "Job...", class: "form-control" %>
                    </div>
                  </tr>
                  <tr>
                    <div class="form-group">
                      <%= f.date_field :birthday, placeholder: "Email...", class: "form-control" %>
                    </div>
                  </tr>
                </tbody>
              </table>
              <div class="panel-footer">
                <% if @user == current_user %>
                  <%= f.submit %>
                  <a data-original-title="Remove this user" data-toggle="tooltip" type="button" class="btn btn-sm btn-danger"><i class="glyphicon glyphicon-remove"></i></a>
                <% end %>
              </div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
